{
  "manifest_version": 3,

  "name": "Keybr CC Extension",
  "description": "An unofficial browser extension for showing layout of CharaChorder 3D input devices at keybr.com",
  "version": "3.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "@keybr-cc-extension-new.andy23512"
    }
  },

  "action": {
    "default_title": "Open Options"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "service_worker": "js/background.js",
    "scripts": ["js/background.js"]
  },

  "icons": {
    "16": "image/icon-16.png",
    "128": "image/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.keybr.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "css": ["font.css", "inject.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": ["https://www.keybr.com/*"],
      "resources": ["*.woff2"]
    }
  ],

  "permissions": ["storage"]
}
