{
  "manifest_version": 3,

  "name": "Keybr CC Extension",
  "description": "An unofficial Chrome extension for showing layout of CharaChorder 3D input devices at keybr.com.",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "@keybr-cc-extension-new.andy23512"
    }
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "image/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.keybr.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "css": ["font.css", "inject.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "matches": ["https://www.keybr.com/*"],
      "resources": ["*.woff2"]
    }
  ],

  "permissions": ["storage"]
}
